{% extends 'base.html.twig' %}

{% block title %}Color index{% endblock %}

{% block body %}
    <h1>Color index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Hex</th>
                <th>R</th>
                <th>G</th>
                <th>B</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for color in colors %}
            <tr>
                <td>{{ color.id }}</td>
                <td>{{ color.hex }}</td>
                <td>{{ color.r }}</td>
                <td>{{ color.g }}</td>
                <td>{{ color.b }}</td>
                <td>
                    <a href="{{ path('app_color_show', {'id': color.id}) }}">show</a>
                    <a href="{{ path('app_color_edit', {'id': color.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_color_new') }}">Create new</a>
{% endblock %}
